    {{!-- side section --}}
    <section class="side_section">

      <div class="precedent">
        <h3 class="name">মাননীয় মন্ত্রী</h3>
        <img src="images/precedent.jpg" alt="" width="100%" height="80%">
        <p class="person_description">জনাব ইমরান আহমদ, এমপি</p>
      </div>

      <div class="shochib">
        <h3 class="name">সিনিয়র সচিব</h3>
        <img src="images/person_img2.jpg" alt="" width="100%" height="80%">
        <p class="person_description">ড. আহমেদ মুনিরুছ সালেহীন</p>
      </div>

    </section>
